#ifndef VERSION_H
#define VERSION_H

#define APP_VERSION_MAJOR 0
#define APP_VERSION_MINOR 01
#define APP_VERSION_PATCH 1

#define BUILD_DATE "@BUILD_DATE@"
#define BUILD_TIME "@BUILD_TIME@"
#define BUILD_NUMBER @BUILD_NUMBER@

// Helper macros for stringification
#define STRINGIFY(x) #x
#define TOSTRING(x) STRINGIFY(x)

// Auto-generate version strings from version defines
#define VERSION_STRING "v" TOSTRING(APP_VERSION_MAJOR) "." TOSTRING(APP_VERSION_MINOR) "." TOSTRING(APP_VERSION_PATCH)
#define FULL_VERSION_STRING VERSION_STRING " (Build " TOSTRING(BUILD_NUMBER) ", " BUILD_DATE " " BUILD_TIME ")"

#endif // VERSION_H
